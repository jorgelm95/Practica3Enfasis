@model RedSocial.Dominio.Seguridad.Usuario


@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_LayoutRedSocial.cshtml";
    

}





<link href="~/Content/estilos.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/MisJs.js"></script>

<script>
    $(document).ready(function () {

        $('#buscar').click(function () {
            var palabraclave = $("#BuscaAmigos").val();
            $("#amigosEncontrados").load('@Url.Action("BuscarAmigos", "Usuario", new { area = "Seguridad"})', { palabra: palabraclave })
        });

    });

 

</script>

<body style="background-color:#e9eaed">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="row clearfix">
                <div class="col-md-3 column">
                    <div class="menuPerfil">
                        <img id="fotoPerfil" src="..\..\..\imagenes\@Model.Foto" alt="Foto" />
                        <div>@Model.Nombre</div>
                    </div>
                    <div class="list-group menuPerfil">

                        <a href="@Url.Action("Index", "Home", new { area=""})" class="list-group-item">
                            <span class="glyphicon glyphicon-folder-open"></span>Perfil<span class="badge">80</span>
                        </a>
                        <a href="@Url.Action("Index", "Home", new { area=""})" class="list-group-item">
                            <span class="glyphicon glyphicon-picture">Fotos</span>
                        </a>
                        <a href="/Hola/Usuario/Index" class="list-group-item active">
                            <span class="glyphicon glyphicon-picture"></span>Solicitudes Amistad<span class="badge">15</span>
                        </a>
                        <a href="@Url.Action("Index", "Home", new { area=""})" class="list-group-item">
                            <span class="glyphicon glyphicon-music"></span>Audios<span class="badge">10</span>
                        </a>


                    </div>
                </div>
                <div class="col-md-5 column" id="muro">
                    @ViewBag.Id
                    <div>
                      <div class="form-group">

                            <input type="text" class="form-control" name="palabra" id="BuscaAmigos" placeholder="Buscar Amigos" style="width:50%;" />
                            <input type="submit" id="buscar" value="Buscar" class=" btn btn-primary" style="margin-top:10px;" />
                        </div>
                    </div>

                    <div id="amigosEncontrados">                       
