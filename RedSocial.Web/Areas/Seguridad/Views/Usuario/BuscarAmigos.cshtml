@model IEnumerable<RedSocial.Dominio.Seguridad.Usuario>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
 
<script src="~/Scripts/MisJs.js"></script>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th></th>
     </tr>
   
    

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.Foto"/>          
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
     
        <td>
                               
            @Html.ActionLink("Enviar Solicitud", "EnviarSolicitud", "SolicitudAmistad", new { area = "Seguridad",idEmisor = @ViewBag.Id, idReceptor = item.Id, @class = "btn btn-primary btn-sm" }, null) |
            @Html.ActionLink("Ver Perfil", "Perfil", "Usuario", new { area = "Seguridad", id = item.Id , @class = "btn btn-primary btn-sm"})
        </td>

    </tr>
}

</table>
